{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "cli/dist/**"],
      "cache": true
    },
    "build:lib": {
      "outputs": ["dist/**"],
      "cache": true
    },
    "build:cli": {
      "dependsOn": ["build:lib"],
      "outputs": ["cli/dist/**"],
      "cache": true
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:cli": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "cache": false,
      "outputs": ["coverage/**"]
    },
    "lint": {
      "cache": true
    },
    "format": {
      "cache": false
    }
  }
}
